var pdf = require("pdf-creator-node");
var fs = require('fs');
var html = fs.readFileSync('template.html', 'utf8');

var options = {
    format: "A3",
    orientation: "portrait",
    border: "10mm"
};

var document = {
    html: html,
    data: {
        user: {
            fname: 'Shyam',
            lname: 'Hajare'
        },
    },
    path: "./output.pdf"
};

pdf.create(document, options)
    .then(res => {
        console.log(res)
    })
    .catch(error => {
        console.error(error)
    });